# ============================================
# BACKEND SECRETS (REQUIRED)
# Generate strong random values with:
# openssl rand -base64 32
# ============================================
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# ============================================
# BACKEND CONFIGURATION
# ============================================
PORT=3001
CLIENT_URL=https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com,https://*.vercel.app

# ============================================
# DATABASE CONFIGURATION
# For SQLite (default in Docker):
# DATABASE_URL=file:./data/prod.db
# For PostgreSQL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/database-name
# ============================================
DATABASE_URL=file:./data/prod.db

# ============================================
# MINECRAFT RCON (REQUIRED)
# Make sure RCON is enabled in server.properties
# WARNING: RCON is not encrypted - do not expose to public internet
# ============================================
RCON_HOST=127.0.0.1
RCON_PORT=25575
RCON_PASSWORD=your-rcon-password-here

# ============================================
# SERVER STATUS API (OPTIONAL)
# URL for MC-Sleeping-Server-Starter status API
# ============================================
STATUS_API_URL=http://localhost:5000

# ============================================
# FRONTEND BUILD VARIABLES (REQUIRED)
# These are baked into the React build at build time
# ============================================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_STATUS_API_URL=http://localhost:5000
REACT_APP_SERVER_STATUS_URL=http://localhost:5000
REACT_APP_SERVER_NAME=Your Server Name
REACT_APP_SERVER_IP=your.server.ip
REACT_APP_SERVER_PORT=25565

