{
  "name": "convenient-whitelist",
  "version": "1.0.0",
  "description": "This application allows admins and moderator to easily manage a whitelist for their Minecraft server. Users can be added and removed from the whitelist by simply clicking on a corresponding button in the admin panel.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node14 --format=cjs --external:mock-aws-s3 --external:aws-sdk --external:nock --external:bcrypt",
    "start": "node dist/index.js",
    "watch": "esbuild --watch --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node14 --format=cjs",
    "dev": "concurrently \"npm:watch\" \"npm:start\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:unit:watch": "vitest -c ./vitest.config.unit.ts --watch",
    "test:unit:coverage": "vitest -c ./vitest.config.unit.ts --coverage",
    "test:int": "./scripts/run-integration.sh",
    "test:int:ui": "./scripts/run-integration.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prisma:generate": "prisma generate"
  },
  "prisma": {
    "schema": "src/config/schema.prisma"
  },
  "type": "commonjs",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "minecraft-protocol": "^1.47.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.0",
    "rcon-client": "^4.2.4",
    "semver": "^7.6.3",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/ui": "^1.6.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.0",
    "eslint-plugin-node": "^11.1.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.3.2"
  }
}
