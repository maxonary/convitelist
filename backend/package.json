{
  "name": "convenient-whitelist",
  "version": "1.0.0",
  "description": "This application allows admins and moderator to easily manage a whitelist for their Minecraft server. Users can be added and removed from the whitelist by simply clicking on a corresponding button in the admin panel.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node22 --format=cjs --external:mock-aws-s3 --external:aws-sdk --external:nock --external:bcrypt",
    "start": "node dist/index.js",
    "watch": "esbuild --watch --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node22 --format=cjs",
    "dev": "concurrently \"npm:watch\" \"npm:start\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:unit:watch": "vitest -c ./vitest.config.unit.ts --watch",
    "test:unit:coverage": "vitest -c ./vitest.config.unit.ts --coverage",
    "test:int": "./scripts/run-integration.sh",
    "test:int:ui": "./scripts/run-integration.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prisma:generate": "prisma generate"
  },
  "prisma": {
    "schema": "src/config/schema.prisma"
  },
  "type": "commonjs",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.13.5",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.7",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.19.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "minecraft-protocol": "^1.63.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.17.2",
    "rcon-client": "^4.2.4",
    "semver": "^7.7.4",
    "supertest": "^7.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcrypt": "^6.0.0",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.19",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.6",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/ui": "^4.0.17",
    "concurrently": "^9.1.2",
    "esbuild": "^0.27.2",
    "eslint": "^10.0.2",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^17.3.0",
    "prisma": "^5.22.0",
    "ts-node": "^1.7.1",
    "typescript": "^5.8.3",
    "vitest": "^4.0.17",
    "vitest-mock-extended": "^3.1.0"
  }
}
