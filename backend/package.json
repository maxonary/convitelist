{
  "name": "convenient-whitelist",
  "version": "1.0.0",
  "description": "This application allows admins and moderator to easily manage a whitelist for their Minecraft server. Users can be added and removed from the whitelist by simply clicking on a corresponding button in the admin panel.",
  "main": "index.js",
  "scripts": {
    "build": "esbuild --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node14 --format=cjs --external:mock-aws-s3 --external:aws-sdk --external:nock --external:bcrypt",
    "start": "node dist/index.js",
    "watch": "esbuild --watch --bundle src/index.ts --outfile=dist/index.js --platform=node --target=node14 --format=cjs",
    "dev": "concurrently \"npm:watch\" \"npm:start\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest -c ./vitest.config.unit.ts",
    "test:unit:ui": "vitest -c ./vitest.config.unit.ts --ui",
    "test:unit:watch": "vitest -c ./vitest.config.unit.ts --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prisma:generate": "prisma generate"
  },
  "prisma": {
    "schema": "src/config/schema.prisma"
  },
  "type": "commonjs",
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.2.0",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.1",
    "express-session": "^1.17.3",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "minecraft-protocol": "^1.26.5",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "rcon-client": "^4.2.3",
    "semver": "^7.5.4",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport": "^1.0.12",
    "@types/passport-local": "^1.0.35",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/ui": "^1.0.1",
    "concurrently": "^8.0.1",
    "esbuild": "^0.17.18",
    "eslint": "^8.53.0",
    "eslint-plugin-node": "^11.1.0",
    "prisma": "^5.2.0",
    "prisma-client": "^0.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vitest": "^0.34.6",
    "vitest-mock-extended": "^1.3.1"
  }
}
